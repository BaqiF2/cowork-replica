{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "claude-replica",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:ui"
  },
  "app": {
    "windows": [
      {
        "title": "claude-replica",
        "width": 1200,
        "height": 800,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "src-tauri/entitlements.plist",
      "frameworks": [],
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "notification": {
      "all": true
    },
    "fs": {
      "all": true,
      "scope": [
        "$HOME/**",
        "$DESKTOP/**",
        "$DOCUMENTS/**",
        "$DOWNLOADS/**"
      ]
    }
  }
}
