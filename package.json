{
  "name": "claude-replica",
  "version": "0.1.0",
  "description": "完整复刻 Claude Code 的智能代码助手命令行工具",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-replica": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:terminal": "jest --testPathPattern=tests/terminal --testTimeout=30000",
    "test:terminal:watch": "jest --testPathPattern=tests/terminal --testTimeout=30000 --watch",
    "test:terminal:ci": "jest --testPathPattern=tests/terminal --testTimeout=30000 --ci --reporters=default --reporters=jest-junit",
    "test:terminal:report": "jest --testPathPattern=tests/terminal --testTimeout=30000 --json --outputFile=test-reports/terminal-results.json",
    "test:testing": "jest --testPathPattern=tests/testing --testTimeout=30000",
    "test:testing:watch": "jest --testPathPattern=tests/testing --testTimeout=30000 --watch",
    "test:all-terminal": "jest --testPathPattern=\"tests/(terminal|testing)\" --testTimeout=30000",
    "test:property": "jest --testPathPattern=\"\\.property\\.test\\.ts$\" --testTimeout=60000",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "clean:reports": "rm -rf test-reports",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "preversion": "npm run lint && npm test",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "claude",
    "ai",
    "code-assistant",
    "cli",
    "agent",
    "anthropic",
    "llm",
    "coding",
    "developer-tools",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/claude-replica.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/claude-replica/issues"
  },
  "homepage": "https://github.com/your-username/claude-replica#readme",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "@types/diff": "^7.0.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "diff": "^8.0.2",
    "dotenv": "^17.2.3",
    "node-pty": "^1.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "fast-check": "^3.23.2",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
