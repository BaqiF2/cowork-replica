# 应用版本配置示例文件
# 复制此文件为 .env 并修改对应的值

# 应用版本号
VERSION=0.1.0
# 默认模型
CLAUDE_REPLICA_DEFAULT_MODEL=sonnet
# 默认的会话过期时间
SESSION_EXPIRY_HOURS=5

# ========================================
# 显示控制配置
# ========================================
# 是否显示工具调用详情 (true/false, 默认: true)
SHOW_TOOL_DETAILS=true
# 是否显示完整工具输出 (true/false, 默认: true)
SHOW_FULL_TOOL_OUTPUT=true
# 工具输出最大长度，0=无限制 (数字, 默认: 0)
MAX_TOOL_OUTPUT_LENGTH=0
# 是否显示成本信息 (true/false, 默认: true)
SHOW_COST_INFO=true
# 是否显示对话轮次标记 (true/false, 默认: true)
SHOW_CONVERSATION_ROUNDS=true

# ========================================
# 日志控制配置
# ========================================
# 是否记录对话轮次 (true/false, 默认: true)
LOG_CONVERSATION_ROUNDS=true
# 是否记录工具调用 (true/false, 默认: true)
LOG_TOOL_CALLS=true
# 是否记录工具结果 (true/false, 默认: true)
LOG_TOOL_RESULTS=true

# ========================================
# 模型配置 minimax为例
# ========================================
ANTHROPIC_BASE_URL=https://api.minimaxi.com/anthropic
ANTHROPIC_AUTH_TOKEN=xxx
API_TIMEOUT_MS=600000
ANTHROPIC_MODEL=MiniMax-M2
ANTHROPIC_SMALL_FAST_MODEL=MiniMax-M2
CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC=1